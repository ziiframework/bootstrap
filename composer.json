{
    "name": "ziiframework/bootstrap",
    "description": "zii-framework bootstrap",
    "keywords": ["zii-framework", "bootstrap"],
    "type": "yii2-extension",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/ziiframework/bootstrap/issues",
        "source": "https://github.com/ziiframework/bootstrap"
    },
    "authors": [
        {
            "name": "Yii Team",
            "email": "team@yiiframework.com",
            "homepage": "https://www.yiiframework.com/team"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4.0",
        "ziiframework/zii": ">=3.5.6",
        "bower-asset/bootstrap": "3.4.* | 3.3.* | 3.2.* | 3.1.*"
    },
    "require-dev": {
        "cweagans/composer-patches": "^1.7",
        "phpunit/phpunit": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "yii\\bootstrap\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "yiiunit\\extensions\\bootstrap\\": "tests/"
        }
    },
    "config": {
        "platform": {
            "php": "7.4"
        },
        "sort-packages": true,
        "allow-plugins": {
            "ziiframework/composer": true
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "scripts": {
        "redo-install": [
            "rm -rf vendor/",
            "rm -f composer.lock",
            "@composer self-update -vvv",
            "@composer install -vvv"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.0.x-dev"
        },
        "patches": {
            "phpunit/phpunit-mock-objects": {
                "Fix PHP 7 and 8 compatibility": "https://yiisoft.github.io/phpunit-patches/phpunit_mock_objects.patch"
            },
            "phpunit/phpunit": {
                "Fix PHP 7 compatibility": "https://yiisoft.github.io/phpunit-patches/phpunit_php7.patch",
                "Fix PHP 8 compatibility": "https://yiisoft.github.io/phpunit-patches/phpunit_php8.patch"
            }
        }
    }
}
